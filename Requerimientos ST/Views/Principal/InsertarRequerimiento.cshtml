@model List<Requerimientos_ST.Models.RequerimientoBuscarModelo>
@{
    Layout = null;
}
@if (Model.Count > 0)
{

    <table id="TabInfoRequerimiento" class="display" style="width:100%;">
        <thead>
            <tr>

                <th>
                    @Html.LabelFor(x => Model[0].Id)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].Area)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].Aplicativo)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].alcance)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].FechaSolicitud)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].Prioridad)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].Desarrollador)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].FechaDesarrollo)
                </th>
                <th>
                    @Html.LabelFor(x => Model[0].FechaPrueba)
                </th>
                <th align="center">
                    Eliminar
                </th>
                <th align="center">
                    Selecionar
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(x => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Aplicativo)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.alcance)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FechaSolicitud)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Prioridad)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Desarrollador)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FechaDesarrollo)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FechaPrueba)
                    </td>

                    <td>
                        @using (Ajax.BeginForm("EliminarRequerimiento", "Principal", new { IdRequerimiento = item.Id }, new AjaxOptions
                        {
                            LoadingElementId = "progress",
                            HttpMethod = "Post",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "IdDivResultado",
                        }, new { id = "idFormularioRewuerimientoBusqueda" }))
                        {
                            // de esta pantalla quiero refrecar la pantalla que llama esta

                            <button class="btn btn-sm btn-outline-info" type="submit">
                                <span class="glyphicon glyphicon-edit"></span>
                                <strong>Eliminar</strong>
                            </button>
                        }
                    </td>
                    <td>

                        @using (Html.BeginForm("Index", "Principal", new { IdRequerimiento = item.Id }, FormMethod.Post, new { id = "idFormularioRequerimientoSeleccionar_" + item.Id }))
                        {
                            <button class="btn btn-sm btn-outline-info" form="idFormularioRequerimientoSeleccionar_@item.Id" type="submit" @*onclick="prueba(@item.Id)"*@>
                                <span class="glyphicon glyphicon-edit"></span>
                                <strong>Seleccionar</strong>
                            </button>
                        }



                    </td>
                </tr>
            }
        </tbody>
    </table>

}

<script>
    $(document).ready(function () {
        $('#TabInfoRequerimiento').DataTable({
            responsive: true
        });
    });
   
</script>